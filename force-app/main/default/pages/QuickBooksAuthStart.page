<apex:page controller="QuickBooksAuthStartController" action="{!redirectToQuickBooks}" showHeader="false" sidebar="false" standardStylesheets="false">
    <html>
        <head>
            <title>QuickBooks Authentication</title>
            <style>
                body {
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', sans-serif;
                    margin: 0;
                    padding: 0;
                    background: #f5f5f5;
                }
                .container {
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    min-height: 100vh;
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                }
                .card {
                    background: white;
                    padding: 40px;
                    border-radius: 8px;
                    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
                    text-align: center;
                    max-width: 400px;
                }
                .spinner {
                    border: 4px solid #f3f3f3;
                    border-top: 4px solid #667eea;
                    border-radius: 50%;
                    width: 40px;
                    height: 40px;
                    animation: spin 1s linear infinite;
                    margin: 20px auto;
                }
                @keyframes spin {
                    0% { transform: rotate(0deg); }
                    100% { transform: rotate(360deg); }
                }
                h1 {
                    color: #333;
                    margin-top: 0;
                    font-size: 24px;
                }
                p {
                    color: #666;
                    font-size: 14px;
                    line-height: 1.6;
                }
                .error {
                    background: #fee;
                    color: #c33;
                    padding: 15px;
                    border-radius: 4px;
                    margin: 20px 0;
                    display: none;
                }
                .error.show {
                    display: block;
                }
            </style>
        </head>
        <body>
            <div class="container">
                <div class="card">
                    <apex:outputPanel rendered="{!isProcessing}">
                        <h1>Connecting to QuickBooks</h1>
                        <div class="spinner"></div>
                        <p>Please wait while we redirect you to QuickBooks to authorize access...</p>
                    </apex:outputPanel>

                    <apex:outputPanel rendered="{!isError}">
                        <h1>Authentication Error</h1>
                        <div class="error show">
                            <strong>Error:</strong> {!errorMessage}
                        </div>
                        <p>
                            <apex:outputLink value="/"><button style="padding: 10px 20px; background: #667eea; color: white; border: none; border-radius: 4px; cursor: pointer;">Return to Home</button></apex:outputLink>
                        </p>
                    </apex:outputPanel>
                </div>
            </div>
        </body>
    </html>
</apex:page>
