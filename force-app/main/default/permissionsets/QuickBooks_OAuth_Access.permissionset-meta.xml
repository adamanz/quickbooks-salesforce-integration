<?xml version="1.0" encoding="UTF-8"?>
<PermissionSet xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Grants access to QuickBooks OAuth authentication pages and controllers for Site Guest Users</description>
    <hasActivationRequired>false</hasActivationRequired>
    <label>QuickBooks OAuth Access</label>

    <!-- Visualforce Page Permissions -->
    <pageAccesses>
        <apexPage>QuickBooksAuthStart</apexPage>
        <enabled>true</enabled>
    </pageAccesses>
    <pageAccesses>
        <apexPage>QuickBooksAuthCallback</apexPage>
        <enabled>true</enabled>
    </pageAccesses>

    <!-- Apex Class Permissions -->
    <classAccesses>
        <apexClass>QuickBooksAuthProvider</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>QuickBooksAuthStartController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>QuickBooksOAuthController</apexClass>
        <enabled>true</enabled>
    </classAccesses>
    <classAccesses>
        <apexClass>QuickBooksLogger</apexClass>
        <enabled>true</enabled>
    </classAccesses>

    <!-- Custom Object Permissions -->
    <objectPermissions>
        <allowCreate>true</allowCreate>
        <allowDelete>false</allowDelete>
        <allowEdit>true</allowEdit>
        <allowRead>true</allowRead>
        <modifyAllRecords>false</modifyAllRecords>
        <object>QuickBooks_Auth__c</object>
        <viewAllRecords>false</viewAllRecords>
    </objectPermissions>

    <!-- Field Permissions - Only non-required fields -->
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Access_Token__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Refresh_Token__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Token_Expiry__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Token_Type__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Expires_In__c</field>
        <readable>true</readable>
    </fieldPermissions>
    <fieldPermissions>
        <editable>true</editable>
        <field>QuickBooks_Auth__c.Is_Active__c</field>
        <readable>true</readable>
    </fieldPermissions>
</PermissionSet>
